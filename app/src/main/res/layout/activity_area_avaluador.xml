<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.rememorydroid.oriolsecall.rememorydroid.MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/ivIconRememoryAreaAva"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/iconosymbolrem"
        android:layout_marginStart="55dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:text="@string/AssesserArea"
        android:textAllCaps="true"
        android:textSize="42sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btSelectUser"
        android:layout_width="425dp"
        android:layout_height="80dp"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignTop="@+id/ivIconRememoryAreaAva"
        android:drawableLeft="@drawable/userselecting"
        android:elevation="24dp"
        android:text="@string/PacientSelection"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/etIDuserSelected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btSelectUser"
        android:layout_alignStart="@+id/btSelectUser"
        android:ems="10"
        android:hint="@string/PacientID"
        android:inputType="textPersonName"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/etIDuserDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btDeleteUser"
        android:layout_below="@+id/ivIconRememoryAreaAva"
        android:layout_marginTop="42dp"
        android:ems="10"
        android:hint="@string/PacientID"
        android:inputType="textPersonName"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btDeleteUser"
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btCreateUser"
        android:layout_below="@+id/etIDuserDelete"
        android:drawableLeft="@drawable/userremoving"
        android:elevation="24dp"
        android:text="@string/DeletePacient"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btCreateUser"
        android:layout_width="425dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/ivIconRememoryAreaAva"
        android:layout_alignStart="@+id/btSelectUser"
        android:layout_marginBottom="33dp"
        android:drawableLeft="@drawable/useradding"
        android:elevation="24dp"
        android:text="@string/PacientSignUp"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tvAssessersSessionEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ivIconRememoryAreaAva"
        android:layout_below="@+id/textView"
        android:text="TextView"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvCurrentUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvAssessersSessionEmail"
        android:layout_marginStart="132dp"
        android:layout_toEndOf="@+id/btSelectUser"
        android:text="@string/CurrentUser"
        android:textAlignment="viewStart"
        android:textSize="36sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvCUid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvCurrentUser"

        android:layout_alignStart="@+id/tvCurrentUser"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/tvCUname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvCUid"
        android:layout_below="@+id/tvCUid"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/tvCUlastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvCUname"
        android:layout_below="@+id/tvCUname"
        android:textSize="36sp" />

</RelativeLayout>