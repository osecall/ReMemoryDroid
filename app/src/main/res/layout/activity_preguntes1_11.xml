<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.rememorydroid.oriolsecall.rememorydroid.PreguntesActivity$Fragment11"
    android:screenOrientation="landscape"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="900dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvDetail3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/PerceptiveDetails"
            android:textAlignment="center"
            android:textSize="60sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvSounds3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/WhatOdors"
            android:textAlignment="center"
            android:textSize="39sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/rgDetails3"
            style="@style/radioGroupElementsWhen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <RadioButton
                android:id="@+id/rbDetail3_1"
                style="@style/radioGroupElementsWhen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/Odor" />

            <RadioButton
                android:id="@+id/rbDetails3_2"
                style="@style/radioGroupElementsWhen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/UnPleasentOdor" />

            <RadioButton
                android:id="@+id/rbDetails3_3"
                style="@style/radioGroupElementsWhen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/NoOdors" />

        </RadioGroup>

    </LinearLayout>


    <Button
        android:id="@+id/btNextDetails3"
        style="@style/Next_button"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="103dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/btBackDetails3"
        style="@style/Back_button"
        android:layout_marginStart="32dp"
        android:layout_alignBottom="@+id/btNextDetails3"
        android:layout_alignParentStart="true" />

</RelativeLayout>