<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.rememorydroid.oriolsecall.rememorydroid.PreguntesActivity$Fragment10"
    android:screenOrientation="landscape"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="900dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvDetail2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/PerceptiveDetails"
            android:textAlignment="center"
            android:textSize="60sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvSounds2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Temperature"
            android:textAlignment="center"
            android:textSize="39sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/rgDetails2"
            style="@style/radioGroupElementsWhen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <RadioButton
                android:id="@+id/rbDetail2_1"
                style="@style/radioGroupElementsWhen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/Cold" />

            <RadioButton
                android:id="@+id/rbDetails2_2"
                style="@style/radioGroupElementsWhen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/Warm" />

            <RadioButton
                android:id="@+id/rbDetails2_3"
                style="@style/radioGroupElementsWhen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/NeitherColdWarm" />

        </RadioGroup>

    </LinearLayout>


    <Button
        android:id="@+id/btNextDetails2"
        style="@style/Next_button"
        android:layout_marginEnd="11dp"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/btBackDetails2"
        style="@style/Back_button"
        android:layout_alignTop="@+id/btNextDetails2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="45dp" />

</RelativeLayout>