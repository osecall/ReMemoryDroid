<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.rememorydroid.oriolsecall.rememorydroid.PreguntesActivity$Fragment4"
    android:screenOrientation="landscape"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/lvMonths"
        android:layout_width="500dp"
        android:layout_height="460dp"
        android:layout_below="@+id/linearLayout2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:choiceMode="singleChoice"
        android:drawSelectorOnTop="false"
        android:listSelector="@color/grey_300" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="700dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvWhenItHappened"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/WhenItHappened"
            android:textAlignment="center"
            android:textSize="60sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvWhenMonth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Month"
            android:textAlignment="center"
            android:textSize="39sp"
            android:textStyle="bold" />

    </LinearLayout>

    <Button
        android:id="@+id/btBackMonth"
        style="@style/Back_button"
        android:layout_marginStart="40dp"
        android:layout_alignTop="@+id/btNextMonth"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btNextMonth"
        style="@style/Next_button"
        android:layout_marginEnd="26dp"
        android:layout_alignBottom="@+id/lvMonths"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="42dp" />


</RelativeLayout>