<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="900dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvMissatgeDialegPictures"
        android:layout_width="900dp"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginLeft="15dp"
        android:text="@string/ChoosePicturesUpload"
        android:textAlignment="center"
        android:textSize="45sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivPic1"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_margin="15dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/freepicture" />

        <ImageView
            android:id="@+id/ivPic2"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_margin="15dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/freepicture" />

        <ImageView
            android:id="@+id/ivPic3"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_margin="15dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/freepicture" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivPic4"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_margin="15dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/freepicture" />

        <ImageView
            android:id="@+id/ivPic5"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_margin="15dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/freepicture" />

        <ImageView
            android:id="@+id/ivPic6"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_margin="15dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/freepicture" />

    </LinearLayout>


</LinearLayout>