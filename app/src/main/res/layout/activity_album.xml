<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:screenOrientation="landscape"
    android:layout_height="match_parent"
    tools:context="com.rememorydroid.oriolsecall.rememorydroid.AlbumActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="19dp"
            android:text="@string/Album"
            android:textSize="36sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView5"
            android:layout_below="@+id/textView5"
            android:layout_margin="17dp"
            android:layout_marginTop="17dp"
            android:text="@string/ChooseImageFavourite"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivAlbum0"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/ivAlbum1"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/ivAlbum2"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/ivAlbum3"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="25dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivAlbum4"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/ivAlbum5"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/ivAlbum6"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/ivAlbum7"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
