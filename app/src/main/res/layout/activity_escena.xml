<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:layout_height="match_parent"
    tools:context="com.rememorydroid.oriolsecall.rememorydroid.EscenaActivity">


    <ImageView
        android:id="@+id/ivPicturePreferred"
        android:layout_width="370dp"
        android:layout_height="280dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="45dp"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/linearLayout5" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="460dp"
        android:layout_height="380dp"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="5dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/marcofoto" />

    <TextView
        android:id="@+id/tvEscenaInstruccio1"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:text="@string/ChooseEmotion"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/ivPicturePreferred"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp" />

    <Spinner
        android:id="@+id/eLvEmocions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:elevation="24dp"
        android:gravity="center_vertical|center_horizontal"
        android:spinnerMode="dialog"
        android:layout_below="@+id/tvEscenaInstruccio1"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tvEscenariInstruccions2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvEscenaInstruccio1"
        android:layout_alignBottom="@+id/tvEscenaInstruccio1"
        android:layout_alignStart="@+id/seekBar2"
        android:text="@string/IntensityEmotion"
        android:textSize="26sp"
        android:textStyle="bold" />

    <SeekBar
        android:id="@+id/seekBar2"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:max="5"
        android:progress="3"
        android:layout_marginEnd="30dp"
        android:layout_alignBottom="@+id/tvEscenaInstruccio1"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/eLvEmocions"
        android:layout_alignStart="@+id/seekBar2"
        android:layout_marginStart="12dp"
        android:text="0"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView10"
        android:layout_alignBottom="@+id/textView10"
        android:layout_alignEnd="@+id/seekBar2"
        android:text="5"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imageView5"
        android:layout_marginLeft="20dp"
        android:orientation="vertical"
        android:id="@+id/linearLayout5">

        <TextView
            android:id="@+id/tvEscenaInstruccions3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/et1"
            android:layout_alignStart="@+id/ivPicturePreferred"
            android:layout_marginBottom="16dp"
            android:text="@string/HereWriteAnswers"
            android:textSize="36sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvQuestion4Escena"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/WhatTheyAreDoing"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="@string/WeWere"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvQuestion3Escena"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/WhatMonth"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="15"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvQuestion2Escena"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/WhereAreThey"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="@string/WeAreIn"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvQuestion1Escena"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/WhoAreYouWith"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="@string/IamWith"
                android:textSize="24sp" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btNextEscena"
        style="@style/Next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="84dp"
        android:visibility="invisible"
        android:layout_alignBottom="@+id/imageView5"
        android:layout_alignEnd="@+id/textView11" />

</RelativeLayout>
