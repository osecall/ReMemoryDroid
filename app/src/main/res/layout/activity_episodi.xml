<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.rememorydroid.oriolsecall.rememorydroid.EpisodiActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/ivDrawableCurta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/lvVersio"
        android:layout_marginTop="5dp"
        android:layout_alignTop="@+id/lvVersio"
        android:layout_centerHorizontal="true"
         />

    <ListView
        android:id="@+id/lvEpisodis"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_marginStart="137dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="45dp" />

    <TextView
        android:id="@+id/tvEpisodis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lvEpisodis"
        android:layout_alignStart="@+id/lvEpisodis"
        android:layout_marginBottom="39dp"
        android:layout_marginStart="119dp"
        android:text="@string/Episodes"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/tvVersio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/tvEpisodis"
        android:layout_marginEnd="363dp"
        android:text="@string/Version"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/tvEpisodiTitol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:text="@string/EpisodeSelection"
        android:textSize="45sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ListView
        android:id="@+id/lvVersio"
        android:layout_width="400dp"
        android:layout_height="250dp"
        android:layout_marginStart="133dp"
        android:layout_alignTop="@+id/lvEpisodis"
        android:layout_toEndOf="@+id/lvEpisodis" />

    <Button
        android:id="@+id/btNextEpisode"
        style="@style/Next_button"
        android:layout_alignBottom="@+id/lvEpisodis"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="44dp" />

    <TextView
        android:id="@+id/tvEpisodiSelected"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvVersio"
        android:layout_alignTop="@+id/btNextEpisode" />

    <TextView
        android:id="@+id/tvVersioSelected"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lvEpisodis"
        android:layout_alignEnd="@+id/tvEpisodiSelected" />

    <ImageView
        android:id="@+id/ivDrawableLlarga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/lvVersio"
        android:layout_marginTop="14dp"
        android:layout_alignStart="@+id/ivDrawableCurta"
        android:layout_below="@+id/ivDrawableCurta"
         />

</RelativeLayout>
