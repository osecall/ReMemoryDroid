<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.rememorydroid.oriolsecall.rememorydroid.VisualitzarActivity"
    android:theme="@style/AppTheme.NoActionBar"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <VideoView
        android:id="@+id/vvVisualitzar1"
        android:layout_width="575dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"/>

    <Button
        android:id="@+id/btNextWeather"
        style="@style/Next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginEnd="68dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="81dp" />


    <ImageView
        android:id="@+id/ibStop"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:elevation="24dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/stop"
        android:layout_above="@+id/btNextWeather"
        android:layout_alignStart="@+id/ibPlay"
        android:layout_marginBottom="57dp" />

    <ImageView
        android:id="@+id/ibPlay"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:elevation="24dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/play"
        android:layout_marginBottom="45dp"
        android:layout_marginEnd="92dp"
        android:layout_above="@+id/ibStop"
        android:layout_toStartOf="@+id/btNextWeather" />

    <ProgressBar
        android:id="@+id/progressBarVideo"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="600dp"
        android:layout_height="40dp"
        android:layout_marginTop="33dp"
        android:layout_alignEnd="@+id/btNextWeather" />

</RelativeLayout>
