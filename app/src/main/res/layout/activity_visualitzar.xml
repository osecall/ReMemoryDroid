<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.rememorydroid.oriolsecall.rememorydroid.VisualitzarActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <VideoView
        android:id="@+id/vvVisualitzar1"
        android:layout_width="575dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="false" />

    <Button
        android:id="@+id/btBackWeather"
        style="@style/Back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_weight="1"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/progressBarVideo" />

    <Button
        android:id="@+id/btNextWeather"
        style="@style/Next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginEnd="46dp"
        android:layout_alignBaseline="@+id/btBackWeather"
        android:layout_alignBottom="@+id/btBackWeather"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="false"
        android:orientation="vertical">

    </LinearLayout>

    <ImageView
        android:id="@+id/ibStop"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:elevation="24dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/stop"
        android:layout_above="@+id/btNextWeather"
        android:layout_alignStart="@+id/ibPlay"
        android:layout_marginBottom="57dp" />

    <ImageView
        android:id="@+id/ibPlay"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:elevation="24dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/play"
        android:layout_marginEnd="156dp"
        android:layout_below="@+id/progressBarVideo"
        android:layout_alignEnd="@+id/progressBarVideo"
        android:layout_marginTop="46dp" />

    <ProgressBar
        android:id="@+id/progressBarVideo"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="500dp"
        android:layout_height="40dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/linearLayout6"
        android:layout_toStartOf="@+id/btNextWeather" />

</RelativeLayout>
